# =============================================================================
# CyberSage Primary - Environment Configuration
# =============================================================================
# Copy this file to .env and configure with your actual values

# =============================================================================
# AUTONOMOUS COUNCIL CONFIGURATION
# =============================================================================

# PostgreSQL Configuration for AutonomousCouncil
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=autonomous_council
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

# ChromaDB Configuration
CHROMA_HOST=chromadb
CHROMA_PORT=8000
EXPERTISE_DB_NAME=expertise_db
INCIDENT_DB_NAME=incident_db

# Model Configuration
MODEL_PATH=/app/models/Llama-3.2-3B-Instruct

# =============================================================================
# SECURITY ADVISOR CONFIGURATION
# =============================================================================

# Database Configuration for Security Advisor
DB_HOST=postgres
DB_PORT=5432
DB_NAME=profiledb
DB_USER=postgres
# Use single quotes around password if it contains special characters like $ to prevent shell expansion
# Example: DB_PASSWORD='my$ecure!pa$$word'
DB_PASSWORD=password

# SSH Tunnel Configuration
# Enable SSH tunnel (set to 'true' to enable, 'false' or leave empty to disable)
SSH_TUNNEL_ENABLED=false

# SSH tunnel source port (port on the backend container)
SSH_TUNNEL_SOURCE_PORT=5433

# SSH tunnel target host (remote host to forward to)
SSH_TUNNEL_TARGET_HOST=example.com

# SSH tunnel target port (port on the remote host)
SSH_TUNNEL_TARGET_PORT=5432

# Path to SSH private key file (relative to project root, or absolute path)
# Example: ./ssh_keys/id_rsa
SSH_TUNNEL_PRIVATE_KEY_PATH=./security-advisor/ssh_keys/id_rsa

# SSH tunnel remote user
SSH_TUNNEL_USER=username

# SSH tunnel remote server
SSH_TUNNEL_SERVER=ssh.example.com

# SSH tunnel remote server port
SSH_TUNNEL_SERVER_PORT=22

# Ollama API Configuration
# Base URL for Ollama API (use localhost with SSH tunnel port)
OLLAMA_BASE_URL=http://localhost:11434

# Tavily API Configuration
# API key for Tavily search tool
TAVILY_API_KEY=your_tavily_api_key_here

# =============================================================================
# SECURITY ADVISOR FRONTEND CONFIGURATION
# =============================================================================

# React App API URLs
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=localhost:8000
